<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/modelStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_status_download_prompt"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:importantForAccessibility="yes" />

    <ProgressBar
        android:id="@+id/downloadProgressIndicator"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        android:contentDescription="@string/download_progress_content_description" />

    <TextView
        android:id="@+id/downloadProgressLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/download_progress_placeholder"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:visibility="gone" />

    <Button
        android:id="@+id/modelDownloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/action_download_deepseek" />

    <EditText
        android:id="@+id/promptInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/prompt_hint"
        android:minHeight="56dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:importantForAutofill="yes"
        android:autofillHints="@string/prompt_autofill_hint" />

    <Button
        android:id="@+id/runButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/action_run_inference" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/outputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inference_placeholder" />
    </ScrollView>
</LinearLayout>
